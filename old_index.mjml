      <mj-group>
        <mj-column width="50%" border-right="1px solid #00316D">
          <mj-image src="https://s3-us-west-2.amazonaws.com/vioc-image-bucket/PV1_Email_Galena_5dollar_7dollar/storefront.jpg" />
          <mj-text font-size="24px" font-weight="900" color="#00316D" padding-left="40px">
            <img src="https://s3-us-west-2.amazonaws.com/vioc-image-bucket/PV1_Email_Galena_5dollar_7dollar/icon2.png" alt="Phone" style="vertical-align: middle; width: 30px; height: 30px;">
            Call
          </mj-text>
          <mj-text font-size="24px" font-weight="900" color="#00316D" padding-left="40px">
            <img src="https://s3-us-west-2.amazonaws.com/vioc-image-bucket/PV1_Email_Galena_5dollar_7dollar/icon1.png" alt="Phone" style="vertical-align: middle; width: 30px; height: 30px;">
